<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="#ffffff"
android:layout_margin="10dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/shobpabo"
        android:layout_alignParentBottom="true"
        android:id="@+id/shobpabologo"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- "
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textAlignment="center"
        android:background="@drawable/topbar"
        android:padding="20dp"
        android:id="@+id/weekdayTv"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/weekdayTv"
        android:gravity="center"
        android:id="@+id/tempL"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No  Internet"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textAlignment="center"
            android:id="@+id/tempTv"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textAlignment="center"
            android:id="@+id/weatherTv"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tempL"
        android:id="@+id/buttonL"

        >
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="শনি"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/shoniB"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="রবি"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/robiB"

                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="সোম"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/shomB"

                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="মঙ্গল"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/mongolB"

                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="বুধ"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/budhB"

                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="বৃহস্পতি"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/brihoB"

                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="শুক্র"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:id="@+id/shukroB"


                    >

                </Button>

            </LinearLayout>





        </HorizontalScrollView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchL"
        android:layout_below="@+id/buttonL"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/iphn"
        android:padding="5dp"

        >

        <Spinner
            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
            android:layout_width="250dp"

            android:id="@+id/spin"

            android:layout_height="50dp"
            android:entries="@array/places">

        </Spinner>
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="-30dp"
            android:background="@drawable/button"
            android:text="খুজুন"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/searchbt"
            >

        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        android:layout_below="@id/searchL"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কবে বন্ধ"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/iphn2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:id="@+id/barTv"
            >

        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="এলাকা সমূহ"
                android:textSize="25dp"
                android:background="@drawable/iphn2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:id="@+id/elakaTv"
                >

            </TextView>



        </LinearLayout>

        </ScrollView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/ad"
            android:id="@+id/ad"
            />
    </LinearLayout>












</RelativeLayout>
